[Unit]
Description=Shor Consultation Server
After=network.target

[Service]
Type=simple
User=www-data
WorkingDirectory=/var/www/shor-consultation/server
Environment=NODE_ENV=production
Environment=PORT=5000
ExecStart=/usr/bin/node /var/www/shor-consultation/server/index.js
Restart=on-failure
RestartSec=10
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=shor-consultation

[Install]
WantedBy=multi-user.target

